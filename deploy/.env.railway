# КРИТИЧЕСКИ ВАЖНЫЕ ПЕРЕМЕННЫЕ:

# Telegram Bot Token (обязательно)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook Secret Token для безопасности (обязательно)
WEBHOOK_SECRET_TOKEN=textil_pro_business_secret_2025

# Имя бота (обязательно)
BOT_USERNAME=textilprofi_bot

# OpenAI API Key для AI функций (обязательно для умных ответов)
